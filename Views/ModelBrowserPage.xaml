<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Manager_for_3_D_Printing.Views.ModelBrowserPage"
    Title="Library">
    <CollectionView ItemsSource="{Binding Models}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10" ColumnDefinitions="60, *">
                    <Image Source="{Binding PreviewImagePath}" WidthRequest="60" HeightRequest="60"/>
                    <Label Text="{Binding Name}" Grid.Column="1" VerticalOptions="Center" Margin="10,0"/>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
